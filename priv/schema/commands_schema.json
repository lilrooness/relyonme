{
	"title": "client_command",
	"type": "object",
	"properties": {
		"type": {
			"description": "command type",
			"enum": ["key_command", "click_command"],
			"required": true
		},

		"key_command": {
			"description": "key command",
			"key": {
				"enum": ["w", "a", "s", "d"]
			},

			"command": {
				"enum": ["key_up", "key_down"]
			}
		},

        "click_command": {
            "description": "click command",
            "x": {
                "type": "integer"
            },
            "y": {
                "type": "integer"
            } 
        }
	},

	"oneOf": [
		{
			"required": ["type", "key_command"]
		},
        {
			"required": ["type", "click_command"]
		}
	]
}
